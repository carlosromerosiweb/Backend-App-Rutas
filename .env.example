# Server Configuration
PORT=3000
NODE_ENV=development

# Database Selection
# true = usar base de datos local, false = usar Supabase
USE_LOCAL_DB=false

# Database Configuration (prioridad principal)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# Local Database Configuration (usado solo si USE_LOCAL_DB=true)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres
LOCAL_DB_NAME=postgres

# Supabase Configuration (fallback si DATABASE_URL no est√° disponible y USE_LOCAL_DB=false)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_KEY=YOUR_SUPABASE_KEY
SUPABASE_DB_PASSWORD=YOUR_SUPABASE_DB_PASSWORD

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=1d

# CORS Configuration
CORS_ORIGIN=*

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Firebase Cloud Messaging (FCM)
FCM_ENABLED=true
FCM_SERVER_KEY=your_fcm_server_key

# Email Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_SENDER=notificaciones@ruta-comercial.com
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_SECURE=false
